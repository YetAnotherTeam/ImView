<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/user_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bender" />

    <RelativeLayout
        android:id="@+id/active_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/user_avatar"
        android:layout_toRightOf="@id/user_avatar">

        <ImageButton
            android:id="@+id/vote_down_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="9dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_thumb_down_white_48dp" />

        <RelativeLayout
            android:id="@+id/vote_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/vote_down_button"
            android:layout_toStartOf="@id/vote_down_button">

            <ImageView
                android:id="@+id/author_image"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:padding="9dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_thumb_up_white_48dp" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/author_image"
                android:layout_toStartOf="@id/author_image"
                android:paddingBottom="9dp"
                android:text="124"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="SuperNickName"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#5198C8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/username"
            android:layout_marginBottom="3dp"
            android:text="14c назад"
            android:textColor="#6C6C73" />
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/active_block"
        android:layout_alignStart="@id/active_block"
        android:layout_below="@id/active_block"
        android:text="Very long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text long texextVery long text*"
        android:textColor="#CCCCCC" />
</RelativeLayout>